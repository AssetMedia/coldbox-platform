<!-----------------------------------------------------------------------Author 	 :	Luis MajanoDate     :	September 25, 2005Description : 				General handler for my hello application. 		Modification History:Sep/25/2005 - Luis Majano	-Created the template.-----------------------------------------------------------------------><cfcomponent name="ehGeneral" extends="coldbox.system.eventhandler" output="false">	<!--- ************************************************************* --->	<cffunction name="dspHello" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<!--- EXIT HANDLERS: --->		<cfset Context.setValue("xehHello", "ehGeneral.doHello")>		<cfset Context.setValue("xehStartOver", "ehGeneral.doStartOver")>		<!--- Do Your Logic Here --->		<cfset getPlugin("logger").tracer("Starting dspHello. Using default name")>		<cfset Context.setValue("firstname",getSetting("Codename", true) & getSetting("Version", true) )>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwHello")>		<cfset getPlugin("logger").tracer("View has been set")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doHello" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<!--- EXIT HANDLERS: --->		<cfset Context.setValue("xehHello", "ehGeneral.doHello")>		<cfset Context.setValue("xehStartOver", "ehGeneral.doStartOver")>		<!--- Logger --->		<cfset getPlugin("logger").tracer(Context.getValue("firstname"))>		<!--- Do Your Logic Here --->		<cfif Context.getValue("firstname") eq "">			<cfset Context.setValue("firstname","Not Found")>		<cfelse>			<cfset Context.setValue("firstname",Context.getValue("firstname"))>		</cfif>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwHelloRich")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doStartOver" access="public" returntype="void" output="false"> 		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<!--- Do Your Logic Here --->		<cfset setNextEvent("ehGeneral.dspHello")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="dspPopup" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<!--- Render a view with no layout. --->		<cfset Context.setView("vwTest",true)>	</cffunction>	<!--- ************************************************************* --->	</cfcomponent>