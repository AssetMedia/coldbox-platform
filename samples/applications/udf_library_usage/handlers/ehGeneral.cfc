"void">	<cfscript>		//Use the IsValidEmail() function on the UDF.cfm that was loaded		var results = IsValidEmail( getValue("email") );		//Place results on req collection		setValue("validationResults", results);		//Set messagebox accordingly		if ( results )			getPlugin("messagebox").setMessage("info","The email: #getValue('email')# is valid.");		else			getPlugin("messagebox").setMessage("warning","The email: #getValue('email')# is not valid.");		//Set the view to display		setView("vwHome");	</cfscript>	</cffunction>	<!--- ************************************************************* ---></cfcomponent>