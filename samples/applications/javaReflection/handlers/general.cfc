<!-----------------------------------------------------------------------Author 	 :	Your NameDate     :	September 25, 2005Description : 				This is a ColdBox event handler for general methods.Please note that the extends needs to point to the eventhandler.cfcin the ColdBox system directory.extends = coldbox.system.eventhandler	-----------------------------------------------------------------------><cfcomponent name="general" extends="coldbox.system.eventhandler" output="false">		<!--- This init format is mandatory if you are writing init code else is optional, 	      include the super.init(arguments.controller). 	<cffunction name="init" access="public" returntype="any" output="false">		<cfargument name="controller" type="any">		<cfset super.init(arguments.controller)>		<!--- Any constructor code here --->		<cfreturn this>	</cffunction>	--->	<cffunction name="dspHome" access="public" returntype="void" output="false">		<cfargument name="Event" type="coldbox.system.beans.requestContext">		<cfscript>			var rc = event.getCollection();						/* Exit Handlers */			rc.xehDoReflection = "general.doReflection";			/* Set View */			Event.setView("home");				</cfscript>	</cffunction>		<cffunction name="doReflection" access="public" returntype="void" output="false">		<cfargument name="Event" type="coldbox.system.beans.requestContext">		<cfscript>			var rc = event.getCollection();						/* Exit Handlers */			rc.xehDoReflection = "general.doReflection";						/* Verify Class */			if( rc.oReflector.isClassName(event.getValue("className","")) ){				rc.Reflection = rc.oReflector.getClassInfo(rc.className);			}			else{				getPlugin("messagebox").setMessage("error", "The classname you entered #event.getValue('className','')# does not exist");				setNextEvent("general.dspHome");			}						/* Show Results */			event.setView('results');		</cfscript>	</cffunction>	</cfcomponent>