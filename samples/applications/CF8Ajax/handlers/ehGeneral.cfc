	<cffunction name="dspTab1" access="public" returntype="string" output="false">		<cfargument name="Event" type="coldbox.system.beans.requestContext">		<!--- Set the View To Display, after Logic --->		<!--- no debuggin panel --->		<cfset Event.showdebugpanel(false)  />		<!--- just set view name without any layout --->		<cfset Event.setView(name = 'vwTab1',noLayout = true) />		<!--- render directly to browser --->		<cfreturn renderView('vwTab1') /> 	</cffunction>		<!--- tab2 content --->	<cffunction name="dspTab2" access="public" returntype="any" output="false">		<cfargument name="Event" type="coldbox.system.beans.requestContext">		<!--- Set the View To Display, after Logic --->		<!--- set view without any layout --->		<cfset Event.setView(name = 'vwTab2',noLayout = true) />		<!--- send back to proxy --->		<cfreturn renderView('vwTab2') />	</cffunction>		<!--- cfselect with bind --->	<cffunction name="dspSelectBind" access="public" returntype="void" output="false">		<cfargument name="Event" type="coldbox.system.beans.requestContext">		<!--- Set the View To Display, after Logic --->		<cfset Event.setView("vwSelectBind")>	</cffunction></cfcomponent>