<!-----------------------------------------------------------------------Author 	 :	Luis MajanoDate     :	September 25, 2005Description :	The galleon administrator port.-----------------------------------------------------------------------><cfcomponent name="ehForums" extends="coldbox.system.eventhandler" output="false">	<cffunction name="onAppStart" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<!--- App Init Code --->		<cfset structDelete(application, "userCache")>				<!--- Get main settings --->		<cfinvoke component="#getSetting("ParentMapping")#/cfcs/galleon" method="getSettings" returnVariable="settings">		<cfset application.settings = settings>				<!--- Attachment Directory --->		<cfset application.settings.attachmentdir = expandPath("../attachments")>		<cfif not directoryExists(application.settings.attachmentdir)>			<cfdirectory action="create" directory="#application.settings.attachmentdir#">		</cfif>				<!--- get user CFC --->		<cfset application.user = createObject("component","#getSetting("ParentMapping")#.cfcs.user").init(application.settings)>		<!--- get utils CFC --->		<cfset application.utils = createObject("component","#getSetting("ParentMapping")#.cfcs.utils")>		<!--- get conference CFC --->		<cfset application.conference = createObject("component","#getSetting("ParentMapping")#.cfcs.conference").init(application.settings)>		<!--- get forum CFC --->		<cfset application.forum = createObject("component","#getSetting("ParentMapping")#.cfcs.forum").init(application.settings)>		<!--- get thread CFC --->		<cfset application.thread = createObject("component","#getSetting("ParentMapping")#.cfcs.thread").init(application.settings)>		<!--- get message CFC --->		<cfset application.message = createObject("component","#getSetting("ParentMapping")#.cfcs.message").init(application.settings)>		<!--- get rank CFC --->		<cfset application.rank = createObject("component","#getSetting("ParentMapping")#.cfcs.rank").init(application.settings)>		<cfset application.init = true>	</cffunction>		<cffunction name="onRequestStart" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rc = Context.getCollection()>		<!--- Logout Code --->		<cfif Context.valueExists("logout")>			<cfset doLogout()>		</cfif>		<!--- handle security --->		<cflogin></cflogin>		<!--- Used by index, forums, and threads ---->		<cfset Context.paramValue("sort", "")>				<cfif not isLoggedOn() and not findnocase("Login", Context.getValue("event"))>			<cfset Context.setValue("event","ehForums.dspLogin")>		</cfif>				<!--- must be the correct authentication --->		<cfif not isUserInRole("forumsadmin") and not findnocase("login", Context.getValue("event"))>			<cfset getPlugin("messagebox").setMessage("warning","Invalid Role detected.")>			<cfset Context.setValue("event","ehForums.dspLogin")>		</cfif>				<!--- EXIT HANDLERS: --->		<cfset rc.xehConferences = "ehforums.dspConferences">		<cfset rc.xehForums = "ehforums.dspForums">		<cfset rc.xehThreads = "ehforums.dspThreads">		<cfset rc.xehMessages = "ehforums.dspMessages">		<cfset rc.xehRanks = "ehforums.dspRanks">		<cfset rc.xehUsers = "ehforums.dspUsers">		<cfset rc.xehStats = "ehforums.dspStats">		<cfset rc.xehSearchStats = "ehForums.dspSearchStats">	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="dspHome" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Welcome to the Galleon Administrator")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwIndex")>	</cffunction>	<!--- ************************************************************* --->	<!--- SECURITY HANDLERS --->	<!--- ************************************************************* --->	<cffunction name="dspLogin" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rc = Context.getCollection()>		<!--- EXIT HANDLERS: --->		<cfset rc.xehLogin = "ehForums.doLogin">		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwLogin")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doLogin" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var mygroups = "">				<!--- handle security --->		<cflogin >			<cfif application.user.authenticate(trim(Context.getValue("username")), trim(Context.getValue("password")))>				<!--- good logon, grab their groups --->				<cfset mygroups = application.user.getGroupsForUser(trim(Context.getValue("username")))>				<cfset session.user = application.user.getUser(trim(Context.getValue("username")))>				<cfloginuser name="#trim(Context.getValue("username"))#" password="#trim(Context.getValue("password"))#" roles="#mygroups#">			<cfelse>				<cfset getPlugin("messagebox").setMessage("error","Your username and password did not work.")>				<cfset setNextEvent("ehForums.dspLogin","failedLogon=true&ref=#Context.getValue("ref","")#")>			</cfif>		</cflogin>		<!-- Set NExt Event --->		<cfset setNextEvent("ehForums.dspHome")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doLogout" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<!--- handle security --->		<cflogout>		<cfset setNextEvent("ehForums.dspLogin")>	</cffunction>	<!--- ************************************************************* --->	<!--- CONFERENCES --->	<!--- ************************************************************* --->	<cffunction name="dspConferences" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rc = Context.getCollection()>		<!--- EXIT HANDLERS: --->		<cfset rc.xehConferencesEdit = "ehForums.dspConferencesEdit">				<!--- handle deletions --->		<cfif Context.valueExists("mark") and len(Context.getValue("mark"))>			<cfset doDeleteConference(Context)>		</cfif>		<!--- get conferences --->		<cfset Context.setValue("conferences", application.conference.getConferences(false))>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Conference Editor")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwConferences")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doDeleteConference" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var id = "">		<cfloop index="id" list="#Context.getValue("mark")#">			<cfset application.conference.deleteConference(id)>		</cfloop>		<!--- message box --->		<cfset getPlugin("messagebox").setMessage("info","Conferences deleted successfully")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="dspConferencesEdit" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var conference = "">		<cfset var rc = Context.getCollection()>				<!--- EXIT HANDLERS: --->		<cfset rc.xehSaveConference = "ehForums.doSaveConference">		<!--- Checks --->		<cfif Context.valueExists("cancel") or not Context.valueExists("id") or not len(Context.getValue("id"))>			<cfset setNextEvent("ehForums.dspConferences")>		</cfif>		<cfif Context.getValue("id") neq "0">			<cfset conference = application.conference.getConference(Context.getValue("id")) >			<cfset Context.setValue("name", conference.name)>			<cfset Context.setValue("description", conference.description)>			<cfset Context.setValue("active", conference.active)>		<cfelse>			<cfset Context.setValue("active", false)>		</cfif>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Conference Editor")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwConferences_edit")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doSaveConference" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var errors = "">		<cfset var conference = "">		<!--- Checks --->		<cfif Context.valueExists("cancel") or not Context.valueExists("id") or not len(Context.getValue("id"))>			<cfset setNextEvent("ehForums.dspConferences")>		</cfif>		<cfif not len(trim(Context.getValue("name")))>			<cfset errors = errors & "You must specify a name.<br>">		</cfif>		<cfif not len(trim(Context.getValue("description")))>			<cfset errors = errors & "You must specify a description.<br>">		</cfif>		<cfif not len(errors)>			<cfset conference = structNew()>			<cfset conference.name = trim(htmlEditFormat(Context.getValue("name")))>			<cfset conference.description = trim(htmlEditFormat(Context.getValue("description")))>			<cfset conference.active = trim(htmlEditFormat(Context.getValue("active")))>			<cfif Context.getValue("id") neq 0>				<cfset application.conference.saveConference(Context.getValue("id"), conference)>			<cfelse>				<cfset application.conference.addConference(conference)>			</cfif>			<!--- MessageBox --->			<cfset getPlugin("messagebox").setMessage("info","Conferfence, #conference.name#, has been updated.")>			<cfset setNextEvent("ehForums.dspConferences")>		</cfif>		<!--- Error messages --->		<cfset getPlugin("messagebox").setMessage("error",errors)>		<cfset setNextEvent("ehForums.dspConferencesEdit","id=#Context.getValue("id")#")>	</cffunction>	<!--- ************************************************************* --->	<!--- FORUMS --->	<!--- ************************************************************* --->	<cffunction name="dspForums" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rc = Context.getCollection()>				<!--- EXIT HANDLERS: --->		<cfset rc.xehForumsEdit = "ehForums.dspForumsEdit">		<!--- handle deletions --->		<cfif Context.valueExists("mark") and len(Context.getValue("mark"))>			<cfset doDeleteForums(Context)>		</cfif>		<!--- get forums --->		<cfset Context.setValue("forums",application.forum.getForums(false) )>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Forum Editor")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwForums")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doDeleteForums" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var id = "">		<!--- handle deletions --->		<cfloop index="id" list="#Context.getValue("mark")#">			<cfset application.forum.deleteForum(id)>		</cfloop>		<!--- message box --->		<cfset getPlugin("messagebox").setMessage("info","Forums deleted successfully")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="dspForumsEdit" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var forum = "">		<cfset var rc = Context.getCollection()>				<!--- EXIT HANDLERS: --->		<cfset rc.xehForumsSave = "ehForums.doSaveForums">				<!--- Checks --->		<cfif Context.valueExists("cancel") or not Context.valueExists("id") or not len(Context.getValue("id"))>			<cfset setNextEvent("ehForums.dspForums")>		</cfif>		<!--- get all conferences --->		<cfset Context.setValue("conferences", application.conference.getConferences(false))>		<cfif Context.getValue("id") neq "0">			<cfset forum = application.forum.getForum(Context.getValue("id"))>			<cfset Context.setValue("name", forum.name)>			<cfset Context.setValue("description", forum.description)>			<cfset Context.setValue("readonly", forum.readonly)>			<cfset Context.setValue("active", forum.active)>			<cfset Context.setValue("conferenceidfk", forum.conferenceidfk)>			<cfset Context.setValue("attachments",forum.attachments)>		<cfelse>			<cfset Context.setValue("readonly",false)>			<cfset Context.setValue("active", false)>			<cfset Context.setValue("attachments","false")>		</cfif>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Forum Editor")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwForums_edit")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doSaveForums" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var errors = "">		<cfset var forum = "">		<!--- Checks --->		<cfif Context.valueExists("cancel") or not Context.valueExists("id") or not len(Context.getValue("id"))>			<cfset setNextEvent("ehForums.dspForums")>		</cfif>				<cfif not len(trim(Context.getValue("name")))>			<cfset errors = errors & "You must specify a name.<br>">		</cfif>		<cfif not len(trim(Context.getValue("description")))>			<cfset errors = errors & "You must specify a description.<br>">		</cfif>		<cfif not len(errors)>			<cfset forum = structNew()>			<cfset forum.name = trim(htmlEditFormat(Context.getValue("name")))>			<cfset forum.description = trim(htmlEditFormat(Context.getValue("description")))>			<cfset forum.readonly = trim(htmlEditFormat(Context.getValue("readonly")))>			<cfset forum.active = trim(htmlEditFormat(Context.getValue("active")))>			<cfset forum.attachments = trim(htmlEditFormat(Context.getValue("attachments")))>			<cfset forum.conferenceidfk = trim(htmlEditFormat(Context.getValue("conferenceidfk")))>			<cfif Context.getValue("id") neq 0>				<cfset application.forum.saveForum(Context.getValue("id"), forum)>			<cfelse>				<cfset application.forum.addForum(forum)>			</cfif>			<!--- MessageBox --->			<cfset getPlugin("messagebox").setMessage("info","Forum, #forum.name#, has been updated.")>			<cfset setNextEvent("ehForums.dspForums")>		</cfif>		<!--- Error messages --->		<cfset getPlugin("messagebox").setMessage("error",errors)>		<cfset setNextEvent("ehForums.dspForumsEdit","id=#Context.getValue("id")#")>	</cffunction>	<!--- ************************************************************* --->	<!--- THREADS --->	<!--- ************************************************************* --->	<cffunction name="dspThreads" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rc = Context.getCollection()>				<!--- EXIT HANDLERS: --->		<cfset rc.xehThreadsEdit = "ehForums.dspThreadsEdit">				<!--- handle deletions --->		<cfif Context.valueExists("mark") and len(Context.getValue("mark"))>			<cfset doDeleteThreads(Context)>		</cfif>		<!--- get Threads --->		<cfset Context.setValue("threads",application.thread.getThreads(false) )>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Thread Editor")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwThreads")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doDeleteThreads" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var id = "">		<!--- handle deletions --->		<cfloop index="id" list="#Context.getValue("mark")#">			<cfset application.thread.deleteThread(id)>		</cfloop>		<!--- message box --->		<cfset getPlugin("messagebox").setMessage("info","Threads deleted successfully")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="dspThreadsEdit" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rc = Context.getCollection()>		<cfset var thread = "">		<!--- EXIT HANDLERS: --->		<cfset rc.xehThreadsSave = "ehForums.doSaveThreads">		<!--- Checks --->		<cfif Context.valueExists("cancel") or not Context.valueExists("id") or not len(Context.getValue("id"))>			<cfset setNextEvent("ehForums.dspThreads")>		</cfif>		<!--- get all forums --->		<cfset Context.setValue("forums", application.forum.getForums(false) )>		<!--- get all users --->		<cfset Context.setValue("users", application.user.getUsers() )>		<cfif Context.getValue("id") neq "0">			<cfset thread = application.thread.getThread(Context.getValue("id"))>			<cfset Context.setValue("name", thread.name)>			<cfset Context.setValue("readonly", thread.readonly)>			<cfset Context.setValue("active", thread.active)>			<cfset Context.setValue("forumidfk", thread.forumidfk)>			<cfset Context.setValue("datecreated", dateFormat(thread.datecreated,"m/dd/yy"))>			<cfset Context.setValue("useridfk", thread.useridfk)>			<cfset Context.setValue("sticky", thread.sticky)>		<cfelse>			<cfset Context.setValue("readonly", false)>			<cfset Context.setValue("active", false)>			<cfset Context.setValue("datecreated", dateFormat(now(),"m/dd/yy"))>			<cfset Context.setValue("sticky", false)>		</cfif>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Conference Editor")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwThreads_edit")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doSaveThreads" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var errors = "">		<cfset var thread = "">				<!--- Checks --->		<cfif Context.valueExists("cancel") or not Context.valueExists("id") or not len(Context.getValue("id"))>			<cfset setNextEvent("ehForums.dspThreads")>		</cfif>				<cfif not len(trim(Context.getValue("name")))>			<cfset errors = errors & "You must specify a name.<br>">		</cfif>		<cfif not len(trim(Context.getValue("datecreated"))) or not isDate(Context.getValue("datecreated"))>			<cfset errors = errors & "You must specify a valid creation date.<br>">		</cfif>		<cfif not len(errors)>			<cfset thread = structNew()>			<cfset thread.name = trim(htmlEditFormat(Context.getValue("name")))>			<cfset thread.readonly = trim(htmlEditFormat(Context.getValue("readonly")))>			<cfset thread.active = trim(htmlEditFormat(Context.getValue("active")))>			<cfset thread.forumidfk = trim(htmlEditFormat(Context.getValue("forumidfk")))>			<cfset thread.datecreated = trim(htmlEditFormat(Context.getValue("datecreated")))>			<cfset thread.useridfk = trim(htmlEditFormat(Context.getValue("useridfk")))>			<cfset thread.sticky = trim(htmlEditFormat(Context.getValue("sticky")))>			<cfif Context.getValue("id") neq 0>				<cfset application.thread.saveThread(Context.getValue("id"), thread)>			<cfelse>				<cfset application.thread.addThread(thread)>			</cfif>			<!--- MessageBox --->			<cfset getPlugin("messagebox").setMessage("info","Thread, #thread.name#, has been updated.")>			<cfset setNextEvent("ehForums.dspThreads")>		</cfif>		<!--- Error messages --->		<cfset getPlugin("messagebox").setMessage("error",errors)>		<cfset setNextEvent("ehForums.dspThreadsEdit","id=#Context.getValue("id")#")>	</cffunction>	<!--- ************************************************************* --->	<!--- MESSAGES --->	<!--- ************************************************************* --->	<cffunction name="dspMessages" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rc = Context.getCollection()>				<!--- EXIT HANDLERS: --->		<cfset rc.xehMessagesEdit = "ehForums.dspMessagesEdit">		<!--- handle deletions --->		<cfif Context.valueExists("mark") and len(Context.getValue("mark"))>			<cfset doDeleteMessages(Context)>		</cfif>		<!--- get Threads --->		<cfset Context.setValue("messages",application.message.getMessages() )>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Messages Editor")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwMessages")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doDeleteMessages" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var id = "">		<!--- handle deletions --->		<cfloop index="id" list="#Context.getValue("mark")#">			<cfset application.message.deleteMessage(id)>		</cfloop>		<!--- message box --->		<cfset getPlugin("messagebox").setMessage("info","Messages deleted successfully")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="dspMessagesEdit" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rc = Context.getCollection()>		<cfset var message = "">		<!--- EXIT HANDLERS: --->		<cfset rc.xehMessagesSave = "ehForums.doSaveMessages">		<cfset rc.xehAttachment = "ehForums.dspAttachment">		<!--- Checks --->		<cfif Context.valueExists("cancel") or not Context.valueExists("id") or not len(Context.getValue("id"))>			<cfset setNextEvent("ehForums.dspMessages")>		</cfif>		<!--- get all forums --->		<cfset Context.setValue("threads", application.thread.getThreads(false) )>		<!--- get all users --->		<cfset Context.setValue("users", application.user.getUsers() )>		<cfif Context.getValue("id") neq "0">			<cfset message = application.message.getMessage(Context.getValue("id"))>			<cfset Context.setValue("title", message.title)>			<cfset Context.setValue("body", message.body)>			<cfset Context.setValue("posted", dateFormat(message.posted,"m/dd/yy") & timeFormat(message.posted,"h:mm tt"))>			<cfset Context.setValue("useridfk", message.useridfk)>			<cfset Context.setValue("threadidfk", message.threadidfk)>			<cfset Context.setValue("attachment", message.attachment)>		<cfelse>			<cfset Context.setValue("posted","#dateFormat(now(),"m/dd/yy")# #timeFormat(now(),"h:mm tt")#")>			<cfset Context.setValue("title","")>		</cfif>		<!--- Set Title and Templatename --->		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwMessages_edit")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doSaveMessages" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var errors = "">		<cfset var message = "">		<cfset var currentMessage = "">		<cfset var users = "">		<cfset var threadPicked = "">		<cfset var theusername = "">		<cfset var rc = Context.getCollection()>				<!--- Checks --->		<cfif Context.valueExists("cancel") or not Context.valueExists("id") or not len(Context.getValue("id"))>			<cfset setNextEvent("ehForums.dspMessages")>		</cfif>		<cfif not len(trim(Context.getValue("title")))>			<cfset errors = errors & "You must specify a title.<br>">		</cfif>		<cfif not len(trim(Context.getValue("body")))>			<cfset errors = errors & "You must specify a body.<br>">		</cfif>		<cfif not len(trim(Context.getValue("posted"))) or not isDate(Context.getValue("posted"))>			<cfset errors = errors & "You must specify a valid creation date.<br>">		</cfif>		<cfif not len(errors)>						<cfset message = structNew()>			<cfif rc.id neq 0>				<cfset currentMessage = application.message.getMessage(rc.id)>			</cfif>			<!--- Remove The File --->			<cfif structKeyExists(rc, "removefile")>				<cfif currentMessage.attachment neq "" and fileExists(application.settings.attachmentdir & getSetting("OSFileSeparator",1) & currentMessage.filename)>					<cffile action="delete" file="#application.settings.attachmentdir#/#currentMessage.filename#">					<cfset message.attachment = "">					<cfset message.filename = "">				</cfif>			<cfelseif rc.id neq 0>				<cfset message.attachment = currentMessage.attachment>				<cfset message.filename = currentMessage.filename>			<cfelse>				<cfset message.attachment = "">				<cfset message.filename = "">			</cfif>						<cfset message.title = trim(htmlEditFormat(Context.getValue("title")))>			<cfset message.body = trim(htmlEditFormat(Context.getValue("body")))>			<cfset message.posted = trim(Context.getValue("posted"))>			<cfset message.threadidfk = Context.getValue("threadidfk")>			<cfset message.useridfk = Context.getValue("useridfk")>			<!--- get all users --->			<cfset users = application.user.getUsers() >			<cfif Context.getValue("id") neq 0>				<cfset application.message.saveMessage(Context.getValue("id"), message)>			<cfelse>				<cfset threadPicked = application.thread.getThread(Context.getValue("threadidfk"))>				<!--- translate the user id to the username for addMessage --->				<cfloop query="users">					<cfif Context.getValue("id") is Context.getValue("useridfk")>						<cfset theusername = username>					</cfif>				</cfloop>				<cfset application.message.addMessage(message,threadPicked.forumidfk,theusername,Context.getValue("threadidfk"))>			</cfif>			<!--- MessageBox --->			<cfset getPlugin("messagebox").setMessage("info","Message, #message.title#, has been updated.")>			<cfset setNextEvent("ehForums.dspMessages")>		</cfif>		<!--- Error messages --->		<cfset getPlugin("messagebox").setMessage("error",errors)>		<cfset setNextEvent("ehForums.dspMessagesEdit","id=#Context.getValue("id")#")>	</cffunction>	<!--- ************************************************************* --->	<!--- RANKS --->	<!--- ************************************************************* --->	<cffunction name="dspRanks" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rc = Context.getCollection()>				<!--- EXIT HANDLERS: --->		<cfset rc.xehRanksEdits = "ehForums.dspRanksEdit">		<!--- handle deletions --->		<cfif Context.valueExists("mark") and len(Context.getValue("mark"))>			<cfset doDeleteRanks(Context)>		</cfif>		<!--- get Ranks --->		<cfset Context.setValue("ranks",application.rank.getRanks() )>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Rank Editor")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwRanks")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doDeleteRanks" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var id = "">		<!--- handle deletions --->		<cfloop index="id" list="#Context.getValue("mark")#">			<cfset application.rank.deleteRank(id)>		</cfloop>		<!--- message box --->		<cfset getPlugin("messagebox").setMessage("info","Ranks deleted successfully")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="dspRanksEdit" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rank = "">		<cfset var rc = Context.getCollection()>				<!--- EXIT HANDLERS: --->		<cfset rc.xehRanksSave = "ehForums.doSaveRanks">		<!--- Checks --->		<cfif Context.valueExists("cancel") or not Context.valueExists("id") or not len(Context.getValue("id"))>			<cfset setNextEvent("ehForums.dspRanks")>		</cfif>		<cfif Context.getValue("id") neq "0">			<cfset rank = application.rank.getRank(Context.getValue("id"))>			<cfset Context.setValue("name", rank.name)>			<cfset Context.setValue("minposts", rank.minposts)>		</cfif>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Conference Editor")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwRanks_edit")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doSaveRanks" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var errors = "">		<cfset var rank = "">				<!--- Checks --->		<cfif Context.valueExists("cancel") or not Context.valueExists("id") or not len(Context.getValue("id"))>			<cfset setNextEvent("ehForums.dspRanks")>		</cfif>		<cfif not len(trim(Context.getValue("name")))>			<cfset errors = errors & "You must specify a name.<br>">		</cfif>		<cfif not len(trim(Context.getValue("minposts"))) or not isNumeric(Context.getValue("minposts")) or Context.getValue("minposts") lt 0>			<cfset errors = errors & "You must specify a numeric value greater than zero for the minimum number of posts.<br>">		</cfif>		<cfif not len(errors)>			<cfset rank = structNew()>			<cfset rank.name = trim(htmlEditFormat(Context.getValue("name")))>			<cfset rank.minposts = trim(htmlEditFormat(Context.getValue("minposts")))>			<cfif Context.getValue("id") neq 0>				<cfset application.rank.saveRank(Context.getValue("id"), rank)>			<cfelse>				<cfset application.rank.addRank(rank)>			</cfif>			<!--- MessageBox --->			<cfset getPlugin("messagebox").setMessage("info","Rank, #rank.name#, has been updated.")>			<cfset setNextEvent("ehForums.dspRanks")>		</cfif>		<!--- Error messages --->		<cfset getPlugin("messagebox").setMessage("error",errors)>		<cfset setNextEvent("ehForums.dspRanksEdit","id=#Context.getValue("id")#")>	</cffunction>	<!--- ************************************************************* --->	<!--- USERS --->	<!--- ************************************************************* --->	<cffunction name="dspUsers" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rc = Context.getCollection()>				<!--- EXIT HANDLERS: --->		<cfset rc.xehUsersEdit = "ehForums.dspUsersEdit">		<!--- handle deletions --->		<cfif Context.valueExists("mark") and len(Context.getValue("mark"))>			<cfset doDeleteUsers(Context)>		</cfif>		<!--- get Ranks --->		<cfset Context.setValue("users",application.user.getUsers() )>				<cfif application.settings.requireconfirmation>			<cfset rc.list = "username,emailaddress,postcount,confirmed,datecreated">		<cfelse>			<cfset rc.list = "username,emailaddress,postcount,datecreated">		</cfif>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Users Editor")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwUsers")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doDeleteUsers" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var id = "">		<!--- handle deletions --->		<cfloop index="id" list="#Context.getValue("mark")#">			<cfset application.user.deleteUser(id)>		</cfloop>		<!--- message box --->		<cfset getPlugin("messagebox").setMessage("info","Users deleted successfully")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="dspUsersEdit" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var user = "">		<cfset var rc = Context.getCollection()>				<!--- EXIT HANDLERS: --->		<cfset rc.xehUsersSave = "ehForums.doSaveUsers">				<!--- Checks --->		<cfif Context.valueExists("cancel") or not Context.valueExists("id") or not len(Context.getValue("id"))>			<cfset setNextEvent("ehForums.dspUsers")>		</cfif>		<cfset Context.setValue("qGroups",application.user.getGroups())>		<cfif Context.getValue("id") gte "1">			<cfset user = application.user.getUser(Context.getValue("id"))>			<cfset Context.setValue("username", user.username)>			<cfset Context.setValue("emailaddress", user.emailaddress)>			<cfset Context.setValue("password", user.password)>			<cfset Context.setValue("datecreated", dateFormat(user.datecreated,"m/dd/yy") & timeFormat(user.datecreated,"h:mm tt"))>			<cfset Context.setValue("groups", user.groups)>			<cfset Context.setValue("confirmed", user.confirmed)>		<cfelse>			<cfset Context.setValue("datecreated",dateFormat(now(),"m/dd/yy") & timeFormat(now(),"h:mm tt") )>			<cfset Context.setValue("confirmed","false")>		</cfif>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Conference Editor")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwUsers_edit")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doSaveUsers" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rc = Context.getCollection()>		<cfset var errors = "">		<cfset var user = "">				<!--- Checks --->		<cfif Context.valueExists("cancel") or not Context.valueExists("id") or not len(Context.getValue("id"))>			<cfset setNextEvent("ehForums.dspUsers")>		</cfif>				<cfif not len(trim(Context.getValue("username")))>			<cfset errors = errors & "You must specify a username.<br>">		</cfif>		<cfif not len(trim(Context.getValue("emailaddress"))) or not isEmail(trim(Context.getValue("emailaddress")))>			<cfset errors = errors & "You must specify an emailaddress.<br>">		</cfif>		<cfif not len(trim(Context.getValue("password")))>			<cfset errors = errors & "You must specify a password.<br>">		</cfif>		<cfif not len(trim(Context.getValue("datecreated"))) or not isDate(Context.getValue("datecreated"))>			<cfset errors = errors & "You must specify a creation date.<br>">		</cfif>		<cfif not structKeyExists(rc,"groups") or not len(rc.groups)>			<cfset errors = errors & "You must specify at least one group for the user.<br>">		</cfif>		<cfif not len(errors)>			<cfset user = structNew()>			<cfset Context.setValue("username", trim(htmlEditFormat(Context.getValue("username"))))>			<cfset Context.setValue("emailaddress", trim(htmlEditFormat(Context.getValue("emailaddress"))))>			<cfset Context.setValue("password",trim(htmlEditFormat(Context.getValue("password"))))>			<cfset Context.setValue("datecreated", trim(htmlEditFormat(Context.getValue("datecreated"))))>			<cfset Context.paramValue("groups","")>			<cfset Context.paramValue("confirmed","true")>			<cfif Context.getValue("id") neq 0>				<cfset application.user.saveUser(Context.getValue("username"), Context.getValue("password"), Context.getValue("emailaddress"), Context.getValue("datecreated"),Context.getValue("groups"),rc.confirmed)>			<cfelse>				<cftry>					<cfset application.user.addUser(Context.getValue("username"), Context.getValue("password"), Context.getValue("emailaddress"), Context.getValue("groups"), rc.confirmed)>					<cfcatch>						<cfset errors = cfcatch.message>					</cfcatch>				</cftry>			</cfif>			<cfif not len(errors)>				<!--- MessageBox --->				<cfset getPlugin("messagebox").setMessage("info","User, #Context.getValue("username")#, has been updated.")>				<cfset setNextEvent("ehForums.dspUsers")>			</cfif>		</cfif>		<cfset getPlugin("messagebox").setMessage("error",errors)>		<cfset setNextEvent("ehForums.dspUsersEdit","id=#Context.getValue("id")#")>	</cffunction>	<!--- ************************************************************* --->	<!--- STATS --->	<!--- ************************************************************* --->	<cffunction name="dspStats" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">				<cfset Context.setValue("charts", true)>		<cfif server.coldfusion.productname is "BlueDragon">			<cfset Context.setValue("charts", false)>		</cfif>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Galleon Stats")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwStats")>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="doGetStats" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var messages = "">		<!--- The framework has the ability to call and run an event handler from a tag --->		<cfset Context.setValue("conferences", application.conference.getConferences())>		<cfset Context.setValue("forums",application.forum.getForums())>		<cfset Context.setValue("threads", application.thread.getThreads())>		<cfset Context.setValue("users", application.user.getUsers())>		<cfset messages = application.message.getMessages()>		<!--- get first post --->		<cfquery name="getMinPost" dbtype="query">		select 	min(posted) as earliestPost		from	messages		</cfquery>		<!--- get last post --->		<cfquery name="getMaxPost" dbtype="query">		select 	max(posted) as lastPost		from	messages		</cfquery>		<!--- Save in Request --->		<cfset Context.setValue("getMinPost", getMinPost)>		<cfset Context.setValue("getMaxPost", getMaxPost)>		<cfset Context.setValue("messages",messages)>	</cffunction>	<!--- ************************************************************* --->	<!--- ************************************************************* --->	<cffunction name="dspSearchStats" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<cfset var rc = Context.getCollection()>		<cfset var prefix = application.settings.tableprefix>		<!--- will be used to generate general stats - so we get all from the last 365 days --->		<cfset var oldest = dateAdd("d", -365, now())>		<cfset var searchstats = "">		<cfset var today = createDateTime(year(now()), month(now()), day(now()), 0,0,0)>		<cfset var past30 = dateAdd("d", -30, now())>		<cfset var past365 = dateAdd("d", -365, now())>				<cfquery datasource="#application.settings.dsn#" name="searchstats">			select	searchterms, datesearched			from	#prefix#search_log			where	datesearched > <cfqueryparam cfsqltype="cf_sql_date" value="#oldest#">		</cfquery>				<!--- ineffecient - but gets around the lack of a limit op in ms access --->		<cfquery name="rc.latest" dbtype="query" maxrows="1">			select searchterms, datesearched			from	searchstats			order by datesearched desc		</cfquery>				<cfquery name="rc.todaysbest" dbtype="query" maxrows="1">			select	searchterms, count(searchterms) as score			from	searchstats			where	datesearched > <cfqueryparam cfsqltype="cf_sql_timestamp" value="#today#">			group by searchterms			order by score desc		</cfquery>						<cfquery name="rc.thismonth" dbtype="query" maxrows="1">			select	searchterms, count(searchterms) as score			from	searchstats			where	datesearched > <cfqueryparam cfsqltype="cf_sql_timestamp" value="#past30#">			group by searchterms			order by score desc		</cfquery>				<cfquery name="rc.thisyear" dbtype="query" maxrows="1">			select	searchterms, count(searchterms) as score			from	searchstats			where	datesearched > <cfqueryparam cfsqltype="cf_sql_timestamp" value="#past365#">			group by searchterms			order by score desc		</cfquery>		<cfquery name="rc.top30" dbtype="query" maxrows="30">			select	searchterms, count(searchterms) as score			from	searchstats			group by searchterms			order by score desc		</cfquery>		<!--- Set Title and Templatename --->		<cfset Context.setValue("title","Galleon Search Stats")>		<cfset Context.setValue("templatename","admin")>		<!--- Set the View To Display, after Logic --->		<cfset Context.setView("vwSearch_stats")>	</cffunction>	<!--- ************************************************************* --->			<cffunction name="dspAttachment" access="public" returntype="void" output="false">		<cfargument name="Context" type="coldbox.system.beans.requestContext">		<!---		Name         : attachment.cfm		Author       : Raymond Camden 		Created      : November 3, 2004		Last Updated : 		History      : 		Purpose		 : Load an attachment	--->		<cfset var message = "">		<cfset var extension = "">		<cfset var rc = Context.getCollection()>				<cfif not Context.valueExists("id") or not len(rc.id)>			<cfset setNextEvent("ehForums.dspHome")>		</cfif>				<cftry>			<cfset message = application.message.getMessage(rc.id)>			<cfcatch>				<cfset getPlugin("logger").logError("Error getting Message", cfcatch)>				<cfset setNextEvent()>			</cfcatch>		</cftry>				<cfif not len(message.filename)>			<cfset setNextEvent()>		</cfif>				<cfif not fileExists(application.settings.attachmentdir & getSetting("OSFileSeparator",1) & message.filename)>			<cfset setNextEvent()>		</cfif>				<cfset extension = listLast(message.filename, ".")>				<cfswitch expression="#extension#">					<cfcase value="txt">				<cfheader name="Content-disposition" value="attachment;filename=#message.filename#">				<cfcontent file="#application.settings.attachmentdir#/#message.filename#" type="text/plain">			</cfcase>								<cfcase value="pdf">				<cfheader name="Content-disposition" value="attachment;filename=#message.filename#">						<cfcontent file="#application.settings.attachmentdir#/#message.filename#" type="application/pdf">			</cfcase>							<cfcase value="doc">				<cfheader name="Content-disposition" value="attachment;filename=#message.filename#">						<cfcontent file="#application.settings.attachmentdir#/#message.filename#" type="application/msword">					</cfcase>						<cfcase value="ppt">				<cfheader name="Content-disposition" value="attachment;filename=#message.filename#">						<cfcontent file="#application.settings.attachmentdir#/#message.filename#" type="application/vnd.ms-powerpoint">					</cfcase>						<cfcase value="xls">				<cfheader name="Content-disposition" value="attachment;filename=#message.filename#">						<cfcontent file="#application.settings.attachmentdir#/#message.filename#" type="application/application/vnd.ms-excel">					</cfcase>					<cfcase value="zip">				<cfheader name="Content-disposition" value="attachment;filename=#message.filename#">						<cfcontent file="#application.settings.attachmentdir#/#message.filename#" type="application/application/zip">					</cfcase>						<!--- everything else --->			<cfdefaultcase>				<cfheader name="Content-disposition" value="attachment;filename=#message.filename#">						<cfcontent file="#application.settings.attachmentdir#/#message.filename#" type="application/unknown">					</cfdefaultcase>							</cfswitch>				<cfabort>	</cffunction>	</cfcomponent>