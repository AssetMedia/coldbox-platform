<cfsetting enablecfoutputonly=true><!---	Name         : layout.cfm	Author       : Raymond Camden 	Created      : June 02, 2004	Last Updated : August 27, 2005	History      : removed mappings (rkc 8/27/05)	Purpose		 : Loads up templates. Will look in a subdirectory for templates, 				   and will load #attributes.template#_header.cfm and 				   #attributes.template#_footer.cfm---><!--- Because "template" is a reserved attribute for cfmodule, we allow templatename as well. ---><cfif valueExists("templatename")>	<cfset setValue("template", getValue("templatename"))></cfif><cfset base = getValue("template")><!--- Header ---><cfset myFile = base & "_header.cfm"><!--- Page Templates ---><cfinclude template="../pagetemplates/#myFile#"><!--- Render The View. This is set wherever you want in your Layout. ---><cfoutput>#renderView()#</cfoutput><!--- Footer ---><cfset myFile = base & "_footer.cfm"><!--- Page Templates ---><cfinclude template="../pagetemplates/#myFile#"><p>&nbsp;</p><p align="center"><a href="http://www.luismajano.com/projects/coldbox"><img src="../../images/poweredby.png" border="0"></a></p><cfsetting enablecfoutputonly=false>