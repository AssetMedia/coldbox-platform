<!-----------------------------------------------------------------------Author 	 :	Your NameDate     :	September 25, 2005Description : 				This is a ColdBox event handler.Please note that the extends needs to point to the eventhandler.cfcin the ColdBox system directory.extends = coldbox.system.eventhandler	-----------------------------------------------------------------------><cfcomponent name="ehGeneral" extends="coldbox.system.eventhandler">		<!--- This init is mandatory, including the super.init(). --->	<cffunction name="init" access="public" returntype="ehGeneral" output="false">		<cfset super.init()>		<!--- Any constructor code here --->		<cfreturn this>	</cffunction>		<cffunction name="onAppInit" access="public" returntype="void" output="false">		<!--- ON Application Start Here --->	</cffunction>		<cffunction name="onRequestStart" access="public" returntype="void" output="false">		<!--- On Request Start Code Here --->	</cffunction>		<cffunction name="onRequestEnd" access="public" returntype="void" output="false">		<!--- ON Request End Here --->	</cffunction>		<cffunction name="onException" access="public" returntype="void" output="false">		<!--- ON Exception Here --->	</cffunction>		<cffunction name="dspHello" access="public" returntype="void" output="false">		<!--- Do Your Logic Here to prepare a view --->		<cfset setValue("welcomeMessage","Welcome to ColdBox!")>			<!--- Set the View To Display, after Logic --->		<cfset setView("vwHello")>	</cffunction>		<cffunction name="doSomething" access="public" returntype="void" output="false">		<!--- Do Your Logic Here, call to models, etc.--->		<!--- Set the next event to run, after Logic, this relocates the browser--->		<cfset setNextEvent("ehGeneral.dspSomething")>	</cffunction>	</cfcomponent>